!!!
%html
  %head
  
  %title
    = "#{yield(:page_title)} - PodUp"
  
  %meta{:charset => 'utf-8'}
  %meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}
  = csrf_meta_tag
  
  = stylesheet_link_tag :all
  = javascript_include_tag :defaults
  
  %body
    #flash_msgs
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
    = yield
